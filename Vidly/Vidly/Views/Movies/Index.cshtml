@model Vidly.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@{
    if (@Model.Movies.Count > 0)
    {
        <ul>
        @foreach (var movie in Model.Movies)
        {
            <li>@movie.Name</li>
        }
        </ul>
    }
    else
    {
        <text>No Movies Found.</text>
    }
 }

